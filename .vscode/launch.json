    "version": "0.2.0",
    "configurations": [
        {
            "name": "add_file_key",
            "cwd": "vocab",
            "request": "launch",
            "type": "dart",
            "program": "bin/vocab.dart",
            "args": ["add", "--file=input/input.yaml"]
        },
        {
            "name": "add_file_keyvalue",
            "cwd": "vocab",
            "request": "launch",
            "type": "dart",
            "program": "bin/vocab.dart",
            "args": ["add", "--file=input/input-ru.txt", "--keyvalue"]
        },        
        {
            "name": "add_interactive",
            "cwd": "vocab",
            "request": "launch",
            "type": "dart",
            "program": "bin/vocab.dart",
            "args": ["add", "--interactive=hallo"]
        },
        {
            "name": "doctor",
            "cwd": "vocab",
            "request": "launch",
            "type": "dart",
            "program": "bin/vocab.dart",
            "args": ["doctor"]
        },   
        {
            "name": "doctor force",
            "cwd": "vocab",
            "request": "launch",
            "type": "dart",
            "program": "bin/vocab.dart",
            "args": ["doctor", "-f"]
        },           
        {
            "name": "doctor_specific_word",
            "cwd": "vocab",
            "request": "launch",
            "type": "dart",
            "program": "bin/vocab.dart",
            "args": ["doctor", "--word=hallo"]
        },           
        {
            "name": "query_single",
            "cwd": "vocab",
            "request": "launch",
            "type": "dart",
            "program": "bin/vocab.dart",
            "args": ["query", "--word=leiter"]
        },      
        {
            "name": "query_multiple",
            "cwd": "vocab",
            "request": "launch",
            "type": "dart",
            "program": "bin/vocab.dart",
            "args": ["query", "--words=hallo,gesund"]
        },    
        {
            "name": "training",
            "cwd": "vocab",
            "request": "launch",
            "type": "dart",
            "program": "bin/vocab.dart",
            "args": ["training", "-c", "1", "-d", "deen", "-m"]
        }, 
        {
            "name": "incorrect args",
            "cwd": "vocab",
            "request": "launch",
            "type": "dart",
            "program": "bin/vocab.dart",
            "args": ["query"]
        },                                  
